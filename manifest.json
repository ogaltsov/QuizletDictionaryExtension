{
  "name": "Quizlet Dictionary",
  "description": "This extension allows to add unknown words to your Quizlet dictionary",
  "version": "1.0.0",
  "manifest_version": 2,

  "permissions": [
  	"contextMenus",
  	"<all_urls>"
  ],
  "background": {
    "scripts": ["wordHandler.js"]
  },
  
  "icons": {
		"16" : "logo.png",
		"32" : "logo.png",
		"48" : "logo.png",
		"128" : "logo.png"
	},
	"browser_action": { 
  	"default_title": "Quizlet Dictionary", 
  	"default_icon": "logo.png"
 	//"default_popup": "popup.html" 
	}
}
